	<delete id="deleteByIds" parameterType="java.lang.reflect.Array">
		delete from Post where id in
		<foreach collection="array" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>

	<!-- 根据部门获取所有职位 -->
	<select id="getPostByDeptId" parameterType="int" resultType="Post">
		SELECT * FROM post WHERE dept_id = #{id}
	</select>

	<sql id="conditionSql">
		<if test="condition != null">
			<where>
			</where>
		</if>
	</sql>
	
	<select id="getAll" resultType="org.aptech.crm.pojo.Post">
		select * from Post
	</select>
	
	<select id="getById" parameterType="int" resultType="org.aptech.crm.pojo.Post">
		select * from Post where id = #{id}
	</select>
	
	<select id="getListByCondition" resultType="org.aptech.crm.pojo.Post">
		select * from Post
			<include refid="conditionSql"></include>
		order by ${column} ${orderBy}
			limit #{start},#{limit}
	</select>
	<select id="getCountByCondition" resultType="int">
		select count(1) from Post
			<include refid="conditionSql"></include>
	</select>
